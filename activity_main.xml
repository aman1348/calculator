<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/inputbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:text="0"
        android:textColor="@color/purple_500"
        android:textSize="56dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btac"
                android:onClick="cleanInput"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btplusminus"
                android:onClick="getOperator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btpercent"
                android:onClick="getOperator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btdivide"
                android:onClick="getOperator"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt7"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt8"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt9"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btmultiply"
                android:onClick="getOperator"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt4"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt5"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt6"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btminus"
                android:onClick="getOperator"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt1"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt2"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/bt3"
                android:onClick="getnum"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="38dp"
                android:layout_marginRight="1pt"
                android:id="@+id/btplus"
                android:onClick="getOperator"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="38dp"
                    android:layout_marginRight="1pt"
                    android:id="@+id/bt0"
                    android:onClick="getnum"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="38dp"
                    android:layout_marginRight="1pt"
                    android:id="@+id/btdot"
                    android:onClick="getnum"/>

                <Button
                    android:text="="
                    android:textSize="38dp"
                    android:id="@+id/btequal"
                    android:layout_width="143dp"
                    android:layout_height="82dp"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:onClick="equaloperator"
                     />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
